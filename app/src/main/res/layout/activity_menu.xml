<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:id="@+id/button2"
        android:layout_width="180dp"
        android:layout_height="57dp"
        android:layout_marginBottom="80dp"
        android:onClick="goToPostulanteRegistroActivity"
        android:text="@string/button_label3"
        android:drawableLeft="@drawable/ic_postulant_add" />

    <Button
        android:id="@+id/button3"
        android:layout_width="180dp"
        android:layout_height="57dp"
        android:onClick="goToPostulanteInfoActivity"
        android:text="@string/button_label2"
        android:drawableLeft="@drawable/ic_postulant_view_info" />

</LinearLayout>

